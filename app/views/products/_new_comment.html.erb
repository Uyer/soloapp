<% if signed_in? %>
<div class = "form_wrapper">
    <h4> Add a review </h4>
    <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
      <p class = "form-group">
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body, class: "form-control" %>
      </p>
      <p class = "form-group">
        <div class="rating"></div>
      </p>
      <p class = "form-group">
      <%= f.submit "Submit", class: "btn btn-default"%>
      </p>
      <% end %>
    <% end %>  
</div>